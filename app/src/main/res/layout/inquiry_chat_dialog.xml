<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x520"
        android:layout_height="wrap_content"
        android:background="@drawable/inquiry_chat_dialog_case"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y110"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_whether"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="是否前往问诊"
                android:textColor="@color/backgroundblue"
                android:textSize="@dimen/y38" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/linegray1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_confirm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确认"
                    android:textColor="@color/backgroundblue"
                    android:textSize="@dimen/y38" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/linegray1" />

            <RelativeLayout
                android:id="@+id/lr_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:textColor="@color/backgroundblue"
                    android:textSize="@dimen/y38" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>