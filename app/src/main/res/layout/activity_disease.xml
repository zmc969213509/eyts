<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.guojianyiliao.eryitianshi.View.activity.DiseaseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:src="@drawable/opinion_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x8"
                android:text="百科"
                android:textColor="@color/backgroundblue"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="疾病详情"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/x36" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="@color/backgroundgray" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/y26"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y44"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="0.9"
                        android:textColor="@color/fontcolor"
                        android:textSize="@dimen/y30" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y32"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:lineSpacingExtra="@dimen/y16"
                            android:textColor="@color/fontgray"
                            android:textSize="@dimen/y26" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y20"
                        android:background="@color/backgroundgray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y32"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginTop="@dimen/y30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="3.3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_uname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginTop="@dimen/y14"
                                android:includeFontPadding="false"
                                android:lineSpacingMultiplier="0.9"
                                android:textColor="@color/fontcolor"
                                android:textSize="@dimen/y30" />

                            <TextView
                                android:id="@+id/tv_ucontent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginTop="@dimen/y26"
                                android:lineSpacingExtra="@dimen/y16"
                                android:textColor="@color/fontgray"
                                android:textSize="@dimen/y26" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_icon"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/y80"
                                android:layout_marginLeft="@dimen/x40"
                                android:layout_marginRight="@dimen/x30"
                                android:layout_marginTop="@dimen/y24"
                                android:src="@color/backgroundblue" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y20"
                        android:background="@color/backgroundgray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y26"
                        android:layout_marginLeft="@dimen/x50"
                        android:layout_marginTop="@dimen/y24"
                        android:text="名医解惑"
                        android:textColor="@color/fontcolor"
                        android:textSize="@dimen/y30" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:background="@color/linegray" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/y20"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginTop="@dimen/y10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_dicon"
                                    android:layout_width="@dimen/x80"
                                    android:layout_height="@dimen/y80"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginTop="@dimen/y24"
                                    android:src="@color/backgroundblue" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginTop="@dimen/y36"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_dname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/fontcolor"
                                    android:textSize="@dimen/y24" />

                                <TextView
                                    android:id="@+id/tv_section"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/y8"
                                    android:textColor="@color/xmgray"
                                    android:textSize="@dimen/y24" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_dcontent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_marginTop="@dimen/y20"
                            android:lineSpacingExtra="@dimen/y16"
                            android:textColor="@color/fontgray"
                            android:textSize="@dimen/y26" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y24"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/x8"
                                android:layout_height="@dimen/y36"
                                android:layout_marginLeft="@dimen/x20"
                                android:background="@color/backgroundblue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x10"
                                android:text="症状"
                                android:textColor="@color/fontcolor"
                                android:textSize="@dimen/y32" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_bcontent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_marginTop="@dimen/y10"
                            android:lineSpacingExtra="@dimen/y12"
                            android:textColor="@color/fontgray"
                            android:textSize="@dimen/y26" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y26"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/x8"
                                android:layout_height="@dimen/y36"
                                android:layout_marginLeft="@dimen/x20"
                                android:background="@color/backgroundblue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x10"
                                android:text="治疗"
                                android:textColor="@color/fontcolor"
                                android:textSize="@dimen/y32" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_acontent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_marginTop="@dimen/y10"
                            android:lineSpacingExtra="@dimen/y16"
                            android:textColor="@color/fontgray"
                            android:textSize="@dimen/y26" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y26"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/x8"
                                android:layout_height="@dimen/y36"
                                android:layout_marginLeft="@dimen/x20"
                                android:background="@color/backgroundblue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/x10"
                                android:text="温馨提示"
                                android:textColor="@color/fontcolor"
                                android:textSize="@dimen/y32" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_acontent1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y40"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_marginTop="@dimen/y10"
                            android:lineSpacingExtra="@dimen/y12"
                            android:textColor="@color/fontgray"
                            android:textSize="@dimen/y26" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y20"
                        android:background="@color/backgroundgray" />

                    <LinearLayout
                        android:id="@+id/doctor_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x30"
                            android:text="医生推荐"
                            android:textColor="@color/fontcolor"
                            android:textSize="@dimen/y28" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_marginLeft="@dimen/x30"
                        android:background="@color/linegray" />


                    <LinearLayout
                        android:id="@+id/ll_doctor_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_dactor_icon"
                                    android:layout_width="@dimen/x112"
                                    android:layout_height="@dimen/y112"
                                    android:layout_marginLeft="@dimen/x30"
                                    android:layout_marginTop="@dimen/y20"
                                    android:src="@color/backgroundblue" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/x26"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/y20"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="程伟伟"
                                            android:textColor="@color/fontcolor"
                                            android:textSize="@dimen/y30" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/y34"
                                            android:layout_marginLeft="@dimen/x24"
                                            android:layout_marginTop="@dimen/y5"
                                            android:background="@drawable/home_doctor_title_case"
                                            android:gravity="center_horizontal">

                                            <TextView
                                                android:id="@+id/tv_dactor_title"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="@dimen/x14"
                                                android:layout_marginRight="@dimen/x14"
                                                android:text="主治医生"
                                                android:textColor="@color/backgroundblue"
                                                android:textSize="@dimen/y20" />
                                        </LinearLayout>


                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_dactor_section"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/y5"
                                        android:text="行为发育科"
                                        android:textColor="@color/xmgray"
                                        android:textSize="@dimen/y24" />

                                    <TextView
                                        android:id="@+id/tv_intro"
                                        android:layout_width="@dimen/x350"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginBottom="@dimen/y20"
                                        android:layout_marginTop="@dimen/y5"
                                        android:ellipsize="end"
                                        android:maxEms="12"
                                        android:singleLine="true"
                                        android:text="擅长：儿童发育行为的多动症，自闭症，遗尿症，疑难杂症等等什么的"
                                        android:textColor="@color/xmgray"
                                        android:textSize="@dimen/y24" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/y30"
                                    android:gravity="center_vertical">

                                    <FrameLayout
                                        android:id="@+id/fl_chat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/x30">

                                        <RelativeLayout
                                            android:layout_width="@dimen/x155"
                                            android:layout_height="@dimen/y72"
                                            android:layout_marginTop="@dimen/x13">

                                            <Button
                                                android:id="@+id/btn_money"
                                                android:layout_width="@dimen/x120"
                                                android:layout_height="@dimen/y60"
                                                android:layout_centerInParent="true"
                                                android:background="@drawable/inquiry_btn_case"
                                                android:clickable="false"
                                                android:focusable="false"
                                                android:focusableInTouchMode="false"
                                                android:text="￥25.00"
                                                android:textColor="#fb878f"
                                                android:textSize="@dimen/y26" />
                                        </RelativeLayout>

                                        <ImageView
                                            android:layout_width="@dimen/x30"
                                            android:layout_height="@dimen/y30"
                                            android:layout_marginTop="@dimen/x13"
                                            android:src="@drawable/inquiry_isclick" />

                                        <ImageView
                                            android:layout_width="@dimen/x80"
                                            android:layout_height="@dimen/y34"
                                            android:layout_marginLeft="@dimen/x62"
                                            android:src="@drawable/home_doctor_state"

                                            />
                                    </FrameLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_nonetwork"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/loadfail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/y400"
                            android:layout_marginTop="@dimen/y50"
                            android:text="内容被外星人劫持了"
                            android:textColor="@color/linegray"
                            android:textSize="@dimen/y32" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_lading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y400"
                            android:src="@drawable/loading" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/y50"
                            android:text="内容加载中"
                            android:textColor="@color/linegray"
                            android:textSize="@dimen/y32" />
                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
