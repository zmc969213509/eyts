<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sll_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.guojianyiliao.eryitianshi.MyUtils.view.activity.view.XCFlowLayout
                android:id="@+id/adviser_label_xl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y30" />
            <!--<com.guojianyiliao.eryitianshi.MyUtils.view.activity.view.MyFlowLayout
                android:id="@+id/fl_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/sp_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="#e6e6e6" />

            <LinearLayout
                android:id="@+id/ll_foot_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sp_1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginTop="@dimen/y30">

                    <ImageView
                        android:id="@+id/view_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:background="@drawable/round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_toRightOf="@id/view_set"
                        android:text="行为发育科"
                        android:textColor="#f87055"
                        android:textSize="@dimen/x28" />

                </RelativeLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_item_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="多动症"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_item_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="自闭症"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_item_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="智力低下"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_item_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="遗尿症"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_item_5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="学习困难"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_item_6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="抽动症"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="语言发育迟缓"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_item_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text=""
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/sp_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="#e6e6e6" />

            <LinearLayout
                android:id="@+id/ll_foot_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sp_2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginTop="@dimen/y30">

                    <ImageView
                        android:id="@+id/view_set_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:background="@drawable/round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_toRightOf="@id/view_set_1"
                        android:text="耳鼻喉科"
                        android:textColor="#f87055"
                        android:textSize="@dimen/x28" />

                </RelativeLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_content_1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="鼻出血"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_content_2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="鼻窦炎"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_content_3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="鼻分泌物堵塞"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_content_4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="拉耳朵"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_content_5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="慢性鼻窦炎"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_content_6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="中耳炎"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <include layout="@layout/view_line_width" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_content_7"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="细菌性鼻窦炎"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />

                    <include layout="@layout/view_line_height" />

                    <TextView
                        android:id="@+id/tv_content_8"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x80"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x30"
                        android:text="过敏性鼻炎"
                        android:textColor="#323232"
                        android:textSize="@dimen/x28" />
                </LinearLayout>

                <include layout="@layout/view_line_width" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>