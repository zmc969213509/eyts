<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/anim_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y200"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_layout_bg_redius_gray">


        <ProgressBar
            android:id="@+id/anim_view_pb"
            android:layout_width="@dimen/x66"
            android:layout_height="@dimen/x66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"/>


        <TextView
            android:id="@+id/anim_view_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            android:text="正在拉取应用信息"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/anim_view_pb"
            android:layout_marginLeft="@dimen/x20"/>

    </RelativeLayout>


</RelativeLayout>