<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/y10">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_chat_doc_icon"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y100"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:src="@drawable/default_icon"
        app:civ_border_color="@color/gray"
        app:civ_border_width="@dimen/x4" />

    <TextView
        android:id="@+id/item_chat_doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y30"
        android:layout_toLeftOf="@+id/item_chat_doc_icon"
        android:text=""
        android:textColor="#bb777777"
        android:textSize="@dimen/x26"
        />

    <TextView
        android:id="@+id/item_chat_doc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_chat_doc_name"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        android:layout_toLeftOf="@+id/item_chat_doc_icon"
        android:background="@drawable/shape_chat_doctor"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/y20"
        android:text="大数据口袋巴士第八课代表"
        android:lineSpacingMultiplier="1.3"
        android:textColor="#777777"
        android:textSize="@dimen/x26" />

</RelativeLayout>