<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_pager_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_lead_spot1"
                    android:layout_width="@dimen/x7"
                    android:layout_height="@dimen/x7"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_marginRight="@dimen/x4"
                    android:src="@drawable/lead_slide_sign" />

                <ImageView
                    android:id="@+id/iv_lead_spot2"
                    android:layout_width="@dimen/x7"
                    android:layout_height="@dimen/x7"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_marginRight="@dimen/x4"
                    android:src="@drawable/lead_slide_sign1" />

                <ImageView
                    android:id="@+id/iv_lead_spot3"
                    android:layout_width="@dimen/x7"
                    android:layout_height="@dimen/x7"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_marginRight="@dimen/x4"
                    android:src="@drawable/lead_slide_sign1" />

                <ImageView
                    android:id="@+id/iv_lead_spot4"
                    android:layout_width="@dimen/x7"
                    android:layout_height="@dimen/x7"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_marginRight="@dimen/x4"
                    android:src="@drawable/lead_slide_sign1" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>