<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x520"
        android:layout_height="wrap_content"
        android:background="@drawable/inquiry_chat_dialog_case"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y100"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="发现新版本"
                android:textColor="@color/backgroundblue"
                android:textSize="@dimen/y36" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_update_load"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:progressDrawable="@drawable/progresscolor" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y48"
            android:text="最新版本：xxxx"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/y28" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            android:text="更新内容："
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/y28" />

        <TextView
            android:id="@+id/tv_updateLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y48"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:text="这次更新了\nXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/y28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/linegray1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_update_confirm"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_update_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="立即更新"
                    android:textColor="@color/backgroundblue"
                    android:textSize="@dimen/y34" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/linegray1" />

            <RelativeLayout
                android:id="@+id/rl_update_cancel"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_update_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="以后再说"
                    android:textColor="@color/backgroundblue"
                    android:textSize="@dimen/y34" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>