<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundgray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0px"
    tools:context="com.guojianyiliao.eryitianshi.View.activity.RegistrationAtivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_rutregistration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="关闭"
                    android:textColor="@color/backgroundblue"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="一键挂号"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/x36" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_registr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_city"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y30"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:text="请选择城市"
                                    android:textColor="@color/linegray1"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/y50"
                                    android:background="@color/linegray" />

                                <ImageView
                                    android:layout_width="@dimen/x28"
                                    android:layout_height="@dimen/y16"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_select" />
                            </LinearLayout>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rl_departments"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_departments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:text="选择科室"
                                    android:textColor="@color/linegray1"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/y50"
                                    android:background="@color/linegray" />

                                <ImageView
                                    android:layout_width="@dimen/x28"
                                    android:layout_height="@dimen/y16"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_select" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_professionaltitle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_professionaltitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:text="选择职称"
                                    android:textColor="@color/linegray1"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/y50"
                                    android:background="@color/linegray" />

                                <ImageView
                                    android:layout_width="@dimen/x28"
                                    android:layout_height="@dimen/y16"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_select" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_time"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:text="选择预约时间"
                                    android:textColor="@color/linegray1"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/y50"
                                    android:background="@color/linegray" />

                                <ImageView
                                    android:layout_width="@dimen/x28"
                                    android:layout_height="@dimen/y16"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_select" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <EditText
                                    android:id="@+id/et_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:background="@null"
                                    android:hint="患者姓名"
                                    android:textColor="@color/fontcolor"
                                    android:textColorHint="@color/linegray1"
                                    android:textCursorDrawable="@drawable/deittext_cursor_blue_style"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/x36"
                                    android:layout_height="@dimen/y36"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_import1" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_gender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:text="患者性别"
                                    android:textColor="@color/linegray1"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/y50"
                                    android:background="@color/linegray" />

                                <ImageView
                                    android:layout_width="@dimen/x28"
                                    android:layout_height="@dimen/y16"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_select" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_age"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:text="患者年龄"
                                    android:textColor="@color/linegray1"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/y50"
                                    android:background="@color/linegray" />

                                <ImageView
                                    android:layout_width="@dimen/x28"
                                    android:layout_height="@dimen/y16"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_select" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y80"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <EditText
                                    android:id="@+id/et_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x16"
                                    android:background="@null"
                                    android:hint="联系方式"
                                    android:inputType="phone"
                                    android:maxLength="11"
                                    android:textColor="@color/fontcolor"
                                    android:textColorHint="@color/linegray1"
                                    android:textCursorDrawable="@drawable/deittext_cursor_blue_style"
                                    android:textSize="@dimen/y32" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/x36"
                                    android:layout_height="@dimen/y36"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:layout_marginRight="@dimen/x26"
                                    android:src="@drawable/registration_import1" />
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_et_describe"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y200"
                            android:layout_marginLeft="@dimen/x30"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginTop="@dimen/y20"
                            android:background="@drawable/registrtion_case"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y28"
                                android:layout_marginLeft="@dimen/x16"
                                android:layout_marginTop="@dimen/y23"
                                android:src="@drawable/registration_import2" />

                            <EditText
                                android:id="@+id/et_describe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x16"
                                android:layout_marginTop="@dimen/y18"
                                android:background="@null"
                                android:hint="病情描述"
                                android:textColor="@color/fontcolor"
                                android:textColorHint="@color/linegray1"
                                android:textCursorDrawable="@drawable/deittext_cursor_blue_style"
                                android:textSize="@dimen/x28" />
                        </LinearLayout>
                    </LinearLayout>


                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1"
                        android:layout_alignTop="@+id/rl"
                        android:background="@color/linegray" />

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y80"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/y25"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x30"
                                android:text="挂号金额 ："
                                android:textColor="@color/fontcolor"
                                android:textSize="@dimen/y32" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥25"
                                android:textColor="@color/backgroundblue"
                                android:textSize="@dimen/y36" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_pay"
                            android:layout_width="@dimen/x240"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/registration_btn"
                            android:text="去支付"
                            android:textColor="@color/white"
                            android:textSize="@dimen/y32" />

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_nonetwork"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y300"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/loadfail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y50"
                        android:text="内容被外星人劫持了"
                        android:textColor="@color/linegray"
                        android:textSize="@dimen/y32" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_lading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/loading" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/y50"
                        android:text="内容加载中"
                        android:textColor="@color/linegray"
                        android:textSize="@dimen/y32" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>


</ScrollView>
