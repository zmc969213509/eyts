<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/y10">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_imchat_doc_icon"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:src="@drawable/default_icon"
        app:civ_border_color="@color/gray"
        app:civ_border_width="@dimen/x4" />

    <TextView
        android:id="@+id/item_imchat_doc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_imchat_doc_icon"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y50"
        android:textSize="@dimen/x26"
        android:text=""
        android:textColor="#777777"
        android:background="@drawable/shape_chat_disease"
        android:paddingTop="@dimen/y20"
        android:paddingBottom="@dimen/y20"
        android:paddingRight="@dimen/x30"
        android:paddingLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x130"
        android:lineSpacingMultiplier="1.3"/>

    <ImageView
        android:id="@+id/item_imchat_doc_img"
        android:layout_width="@dimen/y200"
        android:layout_height="@dimen/y200"
        android:layout_toRightOf="@+id/item_imchat_doc_icon"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        android:visibility="gone"/>

</RelativeLayout>