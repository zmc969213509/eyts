<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0px"
    android:background="#00000000"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/y40" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:layout_marginRight="@dimen/x36"
                    android:layout_marginTop="@dimen/y26"
                    android:src="@drawable/payment_cancel" />
            </LinearLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:max="1000"
            android:progressDrawable="@drawable/progresscolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:text="请在180s内完成付款，否则将取消本次问诊"
            android:textColor="@color/xmgray"
            android:textSize="@dimen/y24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_marginTop="@dimen/y20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/y44"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@drawable/payment_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="微信支付"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/y32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <RadioButton
                    android:id="@+id/rb_wenx"
                    android:layout_width="@dimen/y44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/y20"
                    android:background="@drawable/payment_rb_case"
                    android:button="@null" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/linegray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/y44"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@drawable/payment_zfb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="支付宝支付"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/y32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <RadioButton
                    android:id="@+id/rb_zhifb"
                    android:layout_width="@dimen/y44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/y20"
                    android:background="@drawable/payment_rb_case"
                    android:button="@null" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/linegray" />

        <RelativeLayout
            android:id="@+id/rl_use_cash_coupons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/y44"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@drawable/payment_djj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="代金券"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/y32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cash_coupons_stater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不可用"
                    android:textColor="@color/linegray1"
                    android:textSize="@dimen/y32" />

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y28"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/mypage_skip" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/linegray" />

        <Button
            android:id="@+id/btn_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y15"
            android:background="@drawable/countersign_btn_case"
            android:text="确认支付 ￥25"
            android:textColor="@color/white"
            android:textSize="@dimen/y40" />
    </LinearLayout>

</RelativeLayout>