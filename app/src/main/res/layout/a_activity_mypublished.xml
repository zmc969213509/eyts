<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y488">

        <ImageView
            android:id="@+id/iv_publish_src"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y408" />

        <ImageView
            android:id="@+id/iv_publish_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y40" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_publish_icon"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/y140"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30" />

            <TextView
                android:id="@+id/iv_publish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_toLeftOf="@id/iv_publish_icon"
                android:text="andorid"
                android:textColor="@color/white"
                android:textSize="@dimen/x30" />
        </RelativeLayout>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
