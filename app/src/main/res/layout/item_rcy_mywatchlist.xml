<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_watch_icon"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/default_icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/x4" />

            <TextView
                android:id="@+id/tv_watch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安卓"
                android:layout_toRightOf="@id/iv_watch_icon"
                android:layout_marginLeft="@dimen/x20"
                android:layout_centerVertical="true"
                android:textColor="#323232"
                android:textSize="@dimen/x30" />

            <ImageView
                android:id="@+id/img_watch_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_watch_name"
                android:layout_marginLeft="@dimen/x10"
                android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_watch_gz"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/af_btn_gz"
            android:gravity="center"
            android:text="已关注"
            android:textColor="#17c2ed"
            android:textSize="@dimen/x22" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#e6e6e6"/>

</LinearLayout>