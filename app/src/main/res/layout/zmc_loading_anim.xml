<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadig_anim_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/zmc_loading_anim_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/zmc_loading_anim_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:gravity="center"
            android:text="内容加载中"
            android:textColor="@color/linegray"
            android:textSize="@dimen/y32" />

        <TextView
            android:id="@+id/zmc_loading_anim_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/shape_tv_bg_radius"
            android:paddingBottom="@dimen/y20"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:paddingTop="@dimen/y20"
            android:text="重新加载"
            android:textSize="@dimen/y32"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>