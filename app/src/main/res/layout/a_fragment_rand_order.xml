<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_foot"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/y300"
        android:background="@drawable/af_order_rand"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rand_order_icon"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/y110"
            android:background="@drawable/head_icon" />

        <TextView
            android:id="@+id/rand_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="儿医天使"
            android:textColor="#08aed8"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/rand_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x14"
            android:text="主任医生"
            android:textColor="#777777"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/rand_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="擅长：小儿呼吸方面的问题........"
            android:textColor="#bab9b9"
            android:textSize="@dimen/x20" />
    </LinearLayout>

</RelativeLayout>


