<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_show_tx_bg_blue">

    <TextView
        android:id="@+id/zmc_window_title"
        android:layout_width="@dimen/x550"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="是否前往问诊"
        android:lineSpacingMultiplier="1.2"
        android:gravity="center"
        android:textColor="#17c2ed"
        android:textSize="@dimen/x32"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginBottom="@dimen/y30"
        android:paddingLeft="@dimen/x50"
        android:paddingRight="@dimen/x50"/>

    <View
        android:layout_width="@dimen/x550"
        android:layout_height="@dimen/y1"
        android:background="#e6e6e6"/>

    <LinearLayout
        android:layout_width="@dimen/x550"
        android:layout_height="@dimen/x100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zmc_window_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#17c2ed"
            android:textSize="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:gravity="center"
            />

        <View
            android:layout_width="@dimen/y1"
            android:layout_height="match_parent"
            android:background="#e6e6e6"/>

        <TextView
            android:id="@+id/zmc_window_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="#17c2ed"
            android:textSize="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:gravity="center"
            />

    </LinearLayout>



</LinearLayout>