<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrovView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/doctor_top_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y96"
                            android:layout_marginTop="@dimen/y48">

                            <LinearLayout
                                android:id="@+id/ll_doctor_find"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/x20"
                                    android:layout_height="@dimen/y36"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/x30"
                                    android:layout_marginRight="@dimen/x30"
                                    android:src="@drawable/doctorparticulars_return" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_doctor_top_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/y32" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/tv_doctor_icon"
                                android:layout_width="@dimen/x148"
                                android:layout_height="@dimen/x148"
                                android:layout_marginBottom="@dimen/y30"
                                android:layout_marginLeft="@dimen/x30"
                                android:layout_marginTop="@dimen/y30"
                                app:civ_border_color="@color/white"
                                app:civ_border_width="@dimen/x4" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x30"
                                android:layout_marginTop="@dimen/y42"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_doctor_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/y32" />

                                <TextView
                                    android:id="@+id/tv_doctor_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/y20"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/y24" />

                                <TextView
                                    android:id="@+id/tv_hospital_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/y16"
                                    android:includeFontPadding="false"
                                    android:lineSpacingMultiplier="0.9"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/y24" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y88"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/c"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/x44"
                                    android:layout_height="@dimen/y40"
                                    android:src="@drawable/doctor_details_chat_background" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/x24"
                                    android:text="图文问诊"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/y28" />
                            </LinearLayout>


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="@dimen/y58"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/doctor_particulars_center_wire" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/x44"
                                    android:layout_height="@dimen/y40"
                                    android:src="@drawable/doctor_phone_noclick" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/x24"
                                    android:text="电话问诊"
                                    android:textColor="#777777"
                                    android:textSize="@dimen/y28" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>



                <TextView
                    android:layout_marginTop="@dimen/y44"
                    android:id="@+id/tv_doctor_aptitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:lineSpacingExtra="@dimen/y20"
                    android:textColor="@color/xmgray"
                    android:textSize="@dimen/y24" />

                <RelativeLayout
                    android:id="@+id/rl_look_full_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y76">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_doctor_look_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingMultiplier="0.9"
                            android:text="完整介绍"
                            android:textColor="@color/linegray1"
                            android:textSize="@dimen/y24" />

                        <ImageView
                            android:id="@+id/expand_view"
                            android:layout_width="@dimen/x22"
                            android:layout_height="@dimen/y12"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/x16"
                            android:src="@drawable/inquiry_arrows" />

                    </LinearLayout>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y20"
                    android:layout_marginTop="@dimen/y20"
                    android:background="@color/backgroundgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y80">

                    <TextView
                        android:id="@+id/tv_doctor_commenCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x30"
                        android:textColor="@color/fontcolor"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/linegray" />

                <com.guojianyiliao.eryitianshi.page.view.ListViewForScrollView
                    android:id="@+id/lv_doctor_particulars_assess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y80" />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y81"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/linegray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="挂号金额 ："
                        android:textColor="@color/fontcolor"
                        android:textSize="@dimen/y32" />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backgroundblue"
                        android:textSize="@dimen/y36" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_pay"
                    android:visibility="gone"
                    android:layout_width="@dimen/x240"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/registration_btn"
                    android:text="图文问诊"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y32" />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nonetwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loadfail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:text="内容被外星人劫持了"
                android:textColor="@color/linegray"
                android:textSize="@dimen/y32" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_lading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y50"
                android:text="内容加载中"
                android:textColor="@color/linegray"
                android:textSize="@dimen/y32" />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>