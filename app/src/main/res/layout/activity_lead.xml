<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/tv_click"
            android:layout_width="@dimen/x460"
            android:layout_height="@dimen/y70"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/y212"
            android:background="@drawable/lead_item_case"
            android:text="开始体验"
            android:textColor="@color/white"
            android:textSize="@dimen/y32" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/y66">

            <ImageView
                android:id="@+id/iv_lead_spot1"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x7"
                android:src="@drawable/lead_slide_sign" />

            <ImageView
                android:id="@+id/iv_lead_spot2"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x7"
                android:src="@drawable/lead_slide_sign1" />

            <ImageView
                android:id="@+id/iv_lead_spot3"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x7"
                android:src="@drawable/lead_slide_sign1" />

            <ImageView
                android:id="@+id/iv_lead_spot4"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x7"
                android:src="@drawable/lead_slide_sign1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
