<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundgray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_personaldata"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y286">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y96"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/y130"
                android:src="@drawable/default_icon"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/x5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/x36" />

                <Button
                    android:id="@+id/btn_user_login_form"
                    android:layout_width="@dimen/x140"
                    android:layout_height="@dimen/y32"
                    android:layout_marginTop="@dimen/y14"
                    android:background="@drawable/qqregister_btn_case"

                    android:textColor="@color/backgroundblue"
                    android:textSize="@dimen/x20" />
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_set"
            android:layout_width="@dimen/x108"
            android:layout_height="@dimen/y96"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/y46"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/y25"
                    android:src="@drawable/mypage_set" />

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y28"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y146"
                android:src="@drawable/mypage_skip" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_myreservation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:background="@color/white"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@drawable/mypage_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x26"
                    android:text="我的预约"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y28"
                    android:src="@drawable/mypage_skip" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/linegray" />

        <RelativeLayout
            android:id="@+id/rl_inquiryrecord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:background="@color/white"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/x26"
                    android:src="@drawable/mypage_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="问诊历史"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y28"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/mypage_skip" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/linegray" />

        <RelativeLayout
            android:id="@+id/rl_mycollect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:background="@color/white"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/x26"
                    android:src="@drawable/mypage_collect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="我的收藏"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y28"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/mypage_skip" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/linegray" />

        <RelativeLayout
            android:id="@+id/rl_mydpctor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:background="@color/white"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/x26"
                    android:src="@drawable/mypage_doctor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="我的医生"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y28"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/mypage_skip" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/linegray" />

        <RelativeLayout
            android:id="@+id/rl_MyCashCoupons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:background="@color/white"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/y50"
                    android:layout_marginLeft="@dimen/x26"
                    android:src="@drawable/mypage_cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="我的现金劵"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y28"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@drawable/mypage_skip" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/linegray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/backgroundgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/linegray" />

    <RelativeLayout
        android:id="@+id/rl_mypage_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_marginLeft="@dimen/x26"
                android:src="@drawable/mypage_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="分享"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y28"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/mypage_skip" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/linegray" />

</LinearLayout>