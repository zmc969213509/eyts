<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginLeft="@dimen/x164"
            android:layout_marginRight="@dimen/x140"
            android:layout_marginTop="@dimen/y24"
            android:background="@drawable/chatpage_right_case"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_right_chat"
                    android:layout_width="@dimen/x240"
                    android:layout_height="@dimen/x240"
                    android:layout_marginBottom="@dimen/y8"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_marginTop="@dimen/y8"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y26"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y26"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/y28" />
        </LinearLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_right_head"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/y24"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y24"
        android:src="@color/backgroundblue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x125"
            android:layout_marginTop="@dimen/y70"
            android:src="@drawable/chatpage_right_arrows" />
    </LinearLayout>
</RelativeLayout>