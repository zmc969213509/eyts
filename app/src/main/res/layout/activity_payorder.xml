<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <LinearLayout
            android:id="@+id/ll_rutre_inquiry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="关闭"
                android:textColor="@color/backgroundblue"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/x36" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_below="@id/rl_foot"
        android:background="@color/backgroundgray"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/consulting_page_use_medicine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y20"
            android:layout_toRightOf="@id/iv_time"
            android:text="请在三分钟内完成支付"
            android:textColor="@color/linegray"
            android:textSize="@dimen/y28" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_footdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_pay"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_rtts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y30"
            android:text="成都儿童天使医院"
            android:textColor="@color/payorder"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_pay_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_rtts"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:text="小儿呼吸科"
            android:textColor="@color/payorderdoctor"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tv_pay_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_pay_department"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/tv_pay_department"
            android:text="主任医生"
            android:textColor="@color/payorderdoctor"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_pay_department"
            android:layout_below="@id/tv_pay_department"
            android:layout_marginTop="@dimen/x20"
            android:text="时间"
            android:textColor="@color/payorderdoctor"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tv_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_pay_time"
            android:layout_below="@id/tv_pay_time"
            android:layout_marginBottom="@dimen/y32"
            android:layout_marginTop="@dimen/x20"
            android:text="姓名"
            android:textColor="@color/payorderdoctor"
            android:textSize="@dimen/x24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_below="@id/rl_footdata"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:text="优惠抵用券"
            android:textColor="@color/payorder"
            android:textSize="@dimen/x26" />

        <ImageView
            android:id="@+id/iv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/mypage_skip" />

        <TextView
            android:id="@+id/tv_paypoucon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_coupon"
            android:text="请选择代金券"
            android:textColor="@color/payorder"
            android:textSize="@dimen/x20" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_blank"
        android:layout_below="@id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:background="@color/backgroundgray" />

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_blank"
        android:paddingLeft="15dp"
        android:paddingTop="16dp"
        android:text="选择支付方式"
        android:textColor="@color/payorderdoctor" />

    <RelativeLayout
        android:id="@+id/ll_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mode"
        android:layout_marginTop="@dimen/y32">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/y44"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/payment_zfb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@id/iv_1"
            android:text="支付宝支付"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/y32" />


        <ImageButton
            android:id="@+id/pay_zfb"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/remind_circle_unmep" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_zhifubao"
        android:layout_marginTop="@dimen/y24">

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/y44"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/payment_wx" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@id/iv_2"
            android:text="微信支付"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/y32" />


        <ImageButton
            android:id="@+id/pay_wx"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/remind_circle_unmep" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_payment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/countersign_btn_case"
        android:text="确认支付25元"
        android:textColor="@color/white"
        android:textSize="@dimen/y40" />
</RelativeLayout>
